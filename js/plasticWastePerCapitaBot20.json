{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/plastic-waste-per-capita.csv"},
  "width": "container",
  "mark": "bar",
  "transform": [
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "field": "Per capita plastic waste (kg/person/day)Atop20", "order": "descending" }]
    }, {
      "filter": "datum.rank <= 20"
    }
  ],
  "encoding": {
    "x": {
      "field": "CountryAtop20",
      "type": "nominal",
      "axis": {"title": ""},
      "sort": {"field": "Per capita plastic waste (kg/person/day)Atop20", "order":"descending"}
    },
    "y": {"title": "Per capita plastic waste (kg/person/day)", "aggregate": "mean", "field": "Per capita plastic waste (kg/person/day)Atop20", 
    "type": "quantitative"},
    "color": {"value": "#191970"}
  },
  "config": {
    "background": null,
    "axis": {
      "labelFont": "Helvetica",
      "labelFontSize": 15,
      "titleFontSize": 15
    },
    "font": "Helvetica"
  }
}