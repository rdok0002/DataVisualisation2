{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data":{
    "url": "https://raw.githubusercontent.com/rdok0002/DataVisualisation2/main/data/KM2.csv"
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 500,
      "bind": {
        "input": "range",
        "min": 300,
        "max": 5000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [-105, 50],
      "bind": {
        "input": "select",
        "options": [
          [-105, 60],
          [-70, 40],
          [-70, 30],
          [-147.1,34],
          [-147.1, 15]
        ],
        "labels": ["Centre", "Top Right", "Bottom Right", "Top Left", "Bottom Left"],
        "name": "Map Centre: "
      }
    }
  ],
  "vconcat": [{
    "width":"container",
    "height": 500,
    "projection": {"type": "equirectangular",
      "center": {"expr": "center_to"},
      "scale": {"expr": "zoom_level"}},
    "layer": [
      {
        "data": {
          "url": "js/mapLayerLand.json",
          "format": {"type": "topojson", "feature": "mapLayerLand"}
        },
        "mark": {"type": "geoshape", "fill": "darkgreen", "stroke": "white"}
      },
      {
        "data": {
        "url":"https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "transform": [{"filter": {"param": "brush"}}],
        "mark": {"type": "circle", "tooltip": {"content": "encoding"}},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "color": {
            "field": "Pieces_KM2",
            "type": "quantitative",
            "title": "Number of Micro-plastic Peices Found",
            "scale": {
              "type": "threshold",
              "domain": [500, 1000000, 2000000],
              "range": ["#0275F4", "#021CA4", "#01065A", "#000431"]
            },
            "legend": {"orient": "bottom"}
          },
          "tooltip": [
            {"field": "Pieces_KM2",
            "type": "quantitative",
            "title": "Number of Micro-plastic Peices Found (km^2)"}
          ]
        }
      }
    ]
  },
  {
    "width":"container",
    "height":50,
    "mark": "bar",
    "params":[{
      "name": "brush", 
      "select": 
      {"type": "interval", "encodings": ["x"]}
    }],
    "encoding": {
      "x":{
        "field": "Date",
        "timeUnit": "year",
        "type": "temporal"
      },
      "y":{
        "aggregate": "mean", 
        "field": "Pieces_KM2",
        "type": "quantitative",
        "axis": {"title":"Micro-plastic Found (km^2)", "tickCount": 3, "grid": false}
      },
      "color": {"value": "#A7C7E7"}
    }
  }],
  "config": {
    "background": null,
    "axis": {
      "labelFont": "Helvetica",
      "labelFontSize": 15,
      "titleFontSize": 15
    },
    "font": "Helvetica"
  }
}